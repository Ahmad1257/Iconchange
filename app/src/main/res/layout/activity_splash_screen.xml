<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="@drawable/behance"
    android:orientation="vertical">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Welcome \nDear Students"
         android:textAlignment="center"
         android:padding="25dp"
         android:textSize="35sp"
         android:textStyle="bold"
         android:textColor="#F84005"/>


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/academylogo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brilliant Science and Computer Academy\n\n
Offers a Complete Helping Book \n\n for Students for getting 100%\n\n marks in Exams."
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#32FA05"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:theme="@style/ProgressBarTheme"
        />

</LinearLayout>